block main
  // #PAGE HEADER
  // PAGE HEADER
  .page-header.text-xs-center
    h2.page-header-title Notification & Status
  // END PAGE HEADER

  = '\n'

  .container-fluid
    .panel-wrapper

        = '\n'
        // #NOTIFICATION
        = '\n'

        .panel(class="panel-#{val}")
          .panel-heading
            h6.panel-title
              | Notifications
              small: a(href="#" target="_blank") Notify
          .panel-body
            .row
              .col-md-6
                .text-uppercase.m-y-2.text-capitalize
                  h6.demo-sub-title General
                  each val in ['primary', 'warning', 'info', 'danger', 'success']
                    button.btn.btn-sm(type="button" class="btn-"+val+" js-notify-"+val) #{val}
              .col-md-6
                .text-uppercase.m-y-2.text-capitalize
                  h6.demo-sub-title Directions
                  p The position string option is used to describe both vertical and horizontal alignment. Element notifications and Global notifications can be vertically repositioned to: "top", "middle" or "bottom" and horozontally repositioned to: "left", "center" or "right"
                  each val in ['top-left', 'top-center', 'top-right']
                    button.btn.btn-sm.btn-primary.m-b-1(type="button" class="js-"+val) #{val}
                  each val in ['right-top', 'right-middle', 'right-bottom']
                    button.btn.btn-sm.btn-info.m-b-1(type="button" class="js-"+val) #{val}

          // END PANEL BODY
        // END PANEL

    // END PAGE WRAPPER
  // END CONTAINER FIUID

