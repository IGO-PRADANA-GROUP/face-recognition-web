block main
  .container-fluid
    .panel-wrapper

      // #HEADER
      .panel
        .page-header
          h4.page-header-title Basic

      .panel
        .page-header.text-xs-center
          h4.page-header-title
            | Center
            b Header

      .panel
        .page-header
          .row
            .col-md-4
              .media
                .media-left.media-middle
                  i.ion-stats-bars.fa-2x
                .media-body
                  h4.page-header-title
                    | With
                    b icon
                  .small.text-muted
                    | Header UI Design

      .panel
        .page-header
          .row
            .col-md-4
              .media
                .media-left.media-middle
                  i.ion-stats-bars.fa-2x
                .media-body
                  h4.page-header-title
                    | With
                    b Toolbar
                  .small.text-muted
                    | Header UI Design
            .col-md-8
              .pull-xs-right(role="toolbar")
                a.btn.btn-link: i.fa.fa-rss
                a.btn.btn-link: i.fa.fa-star.text-warning
                button.btn.btn-secondary(type="button" data-toggle="collapse" href="#qmenu" aria-expanded="false" aria-controls="qmenu") Open menu
                button.btn.btn-success(type="button") Add Data

      .panel
        .page-header
          .row
            .col-md-4
              .media
                .media-body
                  h4.page-header-title
                    | With
                    b Dropdown
                  .small.text-muted
                    | Header UI Design
            .col-md-8
            .btn-toolbar.pull-xs-right(role="toolbar")
              .btn-group
                button.btn.btn-primary(type="button")
                  | New
              .btn-group
                button.btn.btn-secondary-outline(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" )
                   span.sr-only Toggle Dropdown
                   i.ion-more
                   .dropdown-menu.dropdown-menu-right
                     button.dropdown-item(type="button") Settings
                     button.dropdown-item(type="button") Help & Feedback
                     button.dropdown-item(type="button") Download

      .panel
        .page-header
          .row
            .col-md-4
              .media
                .media-body
                  h4.page-header-title
                    | With
                    b Chart
                  .small.text-muted
                    | Header UI Design
            .col-md-8
              .pull-xs-right
                .small.text-muted.m-b-1 Live Data
                span(data-plugin='peityBar' data-peity='{ "fill": ["#ccc"], "width": 50 }') 0,3,6,5,2,3,7,3,5,2

      .panel
        .page-header
          .row
            .col-md-4
              .media
                .media-body
                  h4.page-header-title
                    | With
                    b Breadcrumb
                  .small.text-muted
                    | Header UI Design
            .col-md-8
              button.btn.btn-primary.pull-xs-right(type="button")
                | New
        ol.breadcrumb
          li: a(href="index.html") Home
          li.active Dropdowns
