block bottomhtml
  #trackermodal.modal( class="fade-scale" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      .modal-dialog(role='document')
        .modal-content
          .block-header.bg-primary New
          .modal-body
            form
              .row
                .form-group.col-sm-8
                  input#trackerTitleInput.form-control(type="text", name="trackerTitle", placeholder="Learn Portuguese every 2 day", autocomplete="off")
                .form-group.col-sm-4
                  input#trackerDateInput.form-control.js-one-date(type="text", name="trackerDate", placeholder="date", autocomplete="off")
                .form-group.col-sm-12
                  label.form-control-label Priority
                  select.form-control.c-select
                    option 1
                    option 2
                    option 3
                .form-group.col-sm-12
                  label.form-control-label Select Project
                  select(data-plugin='multiselect')
                    include ./partials/_select-option-demo.pug

          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Save changes



